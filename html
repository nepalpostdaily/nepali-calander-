    // Load news when news section is first accessed
    let newsLoaded = false;
    const originalShowSection = showSection;
    showSection = function(sectionName) {
      originalShowSection(sectionName);
      if (sectionName === 'news' && !newsLoaded) {
        loadNews();
        newsLoaded = true;
      }
    };

